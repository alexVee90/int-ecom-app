<%- include('partials/header') %> 
<div class="hero">
  <% if(err.msg === 'Product Not Found') { %>
    <h3>SOLD OUT!</h3>
    <p>(in fact there are no / no more products under this subcategory)</p>
  <% } else if(err.msg === 'There is no wishlist created for this user') { %>
    <h3>The Wishlist is empty</h3>
    <p>(error from the db while returning a empty wishlist)</p>
  <% } else if(err.msg === 'There is no cart created for this user') { %>
    <h3>The Cart is empty</h3>
    <p>(error from the db while returning a empty cart)</p>
  <% } else if(err.msg === 'There are no orders for this user') { %>
    <h3>You haven't placed an order yet</h3>
    <p>(error from the db while returning empty orders)</p>
  <% } else { %>
    <h2>ERROR</h2>
    <h3>STATUS: <%= err.status %></h3>
    <h3><%= err.msg %></h3>
  <% } %>
</div>
<%- include('partials/footer') %>