<%- include('../partials/header') %> 
  <form action="/auth/signup" method="POST"  class="main-form">
    <div class="form-group">
      <label for="name">Name</label>
      <input minlength="3" type="text" name="name" id="name">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input minlength="3" type="email" name="email" id="email">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="text" name="password" id="password">
    </div>
    <input minlength="3" class="btn submit-btn" type="submit" value="Sign Up">
  </form>
  <p class="secondary-paragraph">Already have an account <a href="/auth/signin">SignIn</a></p>
<%- include('../partials/footer') %> 